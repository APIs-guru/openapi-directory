  "paths": {
    "/api/booking/v0/addons": {
      "get": {
        "consumes": [],
        "description": "The booking addons endpoint gives the client all service addon\r\n             combinations for the given rate plan, room type, timeframe, for the given number of adults and\r\n             number of children per room",
        "operationId": "Addons_Get",
        "parameters": [
          {
            "description": "Specifies the hotel id to process.",
            "format": "int32",
            "in": "query",
            "name": "hotelId",
            "required": true,
            "type": "integer"
          },
          {
            "description": "Date of arrival for the guest in the ISO-8601 format \"YYYY-MM-DD\".",
            "format": "date-time",
            "in": "query",
            "name": "arrivalDate",
            "required": true,
            "type": "string"
          },
          {
            "description": "Date of departure for the guest in the ISO-8601 format \"YYYY-MM-DD\".",
            "format": "date-time",
            "in": "query",
            "name": "departureDate",
            "required": true,
            "type": "string"
          },
          {
            "description": "Channel Code the rate plan needs to be configured for.",
            "in": "query",
            "name": "channelCode",
            "required": true,
            "type": "string"
          },
          {
            "description": "Number of adults per room.",
            "format": "byte",
            "in": "query",
            "name": "adults",
            "required": true,
            "type": "string"
          },
          {
            "description": "Number of rooms.",
            "format": "byte",
            "in": "query",
            "name": "rooms",
            "required": true,
            "type": "string"
          },
          {
            "description": "Only return offers with rates for the specified room type code.",
            "in": "query",
            "name": "roomType",
            "required": true,
            "type": "string"
          },
          {
            "description": "Only return offers for the specified room type code.",
            "in": "query",
            "name": "ratePlanCode",
            "required": true,
            "type": "string"
          },
          {
            "description": "Application identifier.",
            "in": "header",
            "name": "App-Id",
            "required": true,
            "type": "string"
          },
          {
            "description": "Application key.",
            "in": "header",
            "name": "App-Key",
            "required": true,
            "type": "string"
          }
        ],
