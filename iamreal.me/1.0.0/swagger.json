        "operationId": "GET VALIDATION",
        "parameters": [
          {
            "description": "The user Id",
            "in": "path",
            "name": "userId",
            "required": true,
            "type": "string"
          },
          {
            "description": "Application Id",
            "in": "query",
            "name": "appId",
            "required": true,
            "type": "string"
          },
          {
            "description": "Application Secret",
            "in": "query",
            "name": "appSecret",
            "required": true,
            "type": "string"
          },
          {
            "description": "Phone number provided by the user",
            "in": "query",
            "name": "phoneNumber",
            "required": true,
            "type": "string"
          },
          {
            "description": "The validation code the user filled in",
            "in": "query",
            "name": "validationCode",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Description was not specified",
            "schema": {
              "$ref": "#/definitions/SmsValidationResponse"
            }
          },
          "400": {
            "description": "Description was not specified"
          },
          "401": {
            "description": "Description was not specified"
          }
        },
        "summary": "Validate that the code typed by user and the code sent are identical",
        "tags": [
          "sms"
        ]
      }
    },
    "/sms/verify": {
      "post": {
        "operationId": "POST VERIFY",
        "parameters": [
          {
            "description": "Application identifier. This never changes.",
            "in": "query",
            "name": "appId",
            "required": true,
            "type": "string"
          },
          {
            "description": "Application Secret. This should never be shared and should be done from server only.",
            "in": "query",
            "name": "appSecret",
            "required": true,
            "type": "string"
          },
          {
            "description": "User Id",
            "in": "query",
            "name": "userId",
            "required": true,
            "type": "string"
          },
          {
            "description": "Phone number provided by the user",
            "in": "query",
            "name": "phoneNumber",
            "required": true,
            "type": "string"
          },
          {
            "description": "Your brand name, which will appear in the SMS message ",
            "in": "query",
            "name": "brand",
            "required": true,
            "type": "string"
          }
